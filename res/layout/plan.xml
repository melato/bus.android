<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/fromRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
			    <ImageView
			        android:id="@+id/textView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/start"
			        android:contentDescription="@string/fromLabel"/>
			
			    <Button
			        android:id="@+id/from"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/label_margin"
			        android:layout_span="2"
			        android:layout_weight="1.0"
			        android:hint="@string/useCurrentLocation"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>
        <TableRow
            android:id="@+id/toRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        
			    <ImageView
			        android:id="@+id/toLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
                    android:src="@drawable/finish"
                    android:contentDescription="@string/toLabel"/>
			
                <Button
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/label_margin"
                    android:layout_weight="1.0"
                    android:layout_span="2"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/selectDestination"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />
			      
	    </TableRow>
	    <TableRow
            android:id="@+id/timeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        
                 <ImageView
                    android:id="@+id/timeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/schedule"
                    android:contentDescription="@string/timeLabel"/>
            
		         <Button
		             android:id="@+id/timeType"
		             android:text="@string/timeDepart"
                     android:layout_marginLeft="@dimen/label_margin"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             />
		
		        <Button
		            android:id="@+id/time"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:text="@string/timeNow"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    </TableRow>
		    </TableLayout>
    
    <!-- 
     -->

    <org.melato.android.layout.FlowLayout
        xmlns:f="http://schemas.android.com/apk/res/org.melato.bus.android"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/modeView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:paddingLeft="@dimen/checkbox_padding"
        android:paddingRight="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        f:horizontalSpacing="@dimen/checkbox_horizontal_spacing"
        f:verticalSpacing="@dimen/checkbox_vertical_spacing" >

    </org.melato.android.layout.FlowLayout>

    <LinearLayout
        android:id="@+id/icons"        
        style="@style/IconBar"
        >
    </LinearLayout>

</LinearLayout>