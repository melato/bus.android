<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/fromRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
			    <TextView
			        android:id="@+id/textView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/fromLabel"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			    <Button
			        android:id="@+id/from"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
					android:layout_weight='1.0'
                    android:hint="@string/useCurrentLocation"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
        <TableRow
            android:id="@+id/toRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        
			    <TextView
			        android:id="@+id/toLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
                    android:text="@string/toLabel"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
                <Button
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/selectDestination"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />
			      
	    </TableRow>
	    <TableRow
            android:id="@+id/timeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        
                <TextView
                    android:id="@+id/timeLabel"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            
    
		    <RelativeLayout
	            android:layout_marginLeft="10dp"
	            android:layout_weight="1.0"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		
		         <Button
		             android:id="@+id/timeType"
		             android:text="@string/timeDepart"
		             android:layout_width="0dp"
		             android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
		             android:layout_toLeftOf="@+id/time"
		             />
		
		        <Button
		            android:id="@+id/time"
		            android:layout_width="96dp"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom="@+id/timeType"
		            android:layout_alignParentRight="true"
		            android:layout_alignTop="@+id/timeType"
		            android:gravity="center_vertical"
		            android:text="@string/timeNow"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    </RelativeLayout>
		    </TableRow>
		    </TableLayout>
    
    <LinearLayout
        android:id="@+id/modeView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/map"
            android:contentDescription="@string/compute"
            android:onClick="onClick"
            android:src="@drawable/compute" />
        
        <ImageButton
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/swap"
            android:contentDescription="@string/map"
            android:src="@drawable/map" />

        <ImageButton
            android:id="@+id/swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/pref"
            android:contentDescription="@string/swap"
            android:src="@drawable/reload" />

        <ImageButton
            android:id="@+id/pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bookmark"
            android:contentDescription="@string/pref_menu"
            android:src="@drawable/preferences" />

        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/bookmark"
            android:src="@drawable/bookmark" />
        </RelativeLayout>

</LinearLayout>