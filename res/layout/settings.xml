<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:title="@string/pref_title" >

    <PreferenceCategory android:title="@string/appearance" >

        <ListPreference
            android:defaultValue="original"
            android:entries="@array/route_colors"
            android:entryValues="@array/route_colors_values"
            android:key="route_colors"
            android:summary="@string/route_colors_summary"
            android:title="@string/route_colors" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="nearby_times"
            android:summary="@string/pref_nearby_times_desc"
            android:title="@string/pref_nearby_times" />

        <ListPreference
            android:defaultValue=""
            android:entries="@array/lang_names"
            android:entryValues="@array/lang_codes"
            android:key="pref_lang"
            android:summary="@string/pref_lang_summary"
            android:title="@string/language" />
        
    </PreferenceCategory>

</PreferenceScreen>